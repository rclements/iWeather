<h1>iWeather</h1>

<table style="float: left; width:620px;">
  <thead>
    <tr>
      <th width="80"></th>
      <th width="200">Day</th>
      <th>Summary</th>
    </tr>
  </thead>
  <tbody>
    <%- @forecast["forecastday"].each do |forecast| %>
      <tr>
        <td><%=image_tag(forecast["icon_url"])%></td>
        <td><%=forecast["title"]%></td>
        <td><%=forecast["fcttext"]%></td>
      </tr>
    <%end%>
  </tbody>
</table>

<div style='float: left; width: 800px; top:500px;'>
  <div id="directions" style='width: 800px; height: 400px;'></div>
</div>

<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
